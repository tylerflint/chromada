<div class='full-column'>
	<div class='nav'>
		<ul>
			<% if (@company) %>
				<li class='first'><a href='<%= url_for([:admin, @company, :dashboard]) %>'><%= @company.name %><span class='arrow'></span></a></li>
			<% end %>
			<% current_user.companies.only(:name).asc(:name).each do |c| %>
				<% if (c!=@company) %>
					<li><a href='<%= url_for([:admin, c, :dashboard]) %>'><%= c.name %><span class='arrow'></span></a></li>
				<% end %>
			<% end %>
			<li class='search' title=''>
				<input id="" value="Add New Company" onFocus='this.value = ""' onBlur='if(this.value == "") this.value = this.defaultValue;' />
			</li>
		</ul>
	</div>
</div>

<div class='left-column'>
	<% if (@company) %>
		<h2 class='heading company'><%= @company.name %></h2>
		<a href='<%= url_for([:admin, :dashboard]) %>' title='Back to Dashboard' class='admin-button back'><span>Switch Company</span></a>
	<% else %>
		<h2 class='heading company'>Dashboard</h2>
	<% end %>
</div>

<div class="right-column">
	<span></span>
</div>