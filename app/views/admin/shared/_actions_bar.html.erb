	<% end %>
	
	<div class="wrapper actions">
		<span class="submit"><%= form.submit 'login', :class => "button", :value => "Submit" %></span>
		<span class="cancel"><%= form.submit 'login', :class => "button", :value => "Cancel" %></span>
		
		<button type="submit" title="Save" name="commit" id="role_submit" class="button save"></button>
		<a href="<%= delete_url %>" title="Delete" name="commit" class="button remove delete"></a>
	</div>
</div>