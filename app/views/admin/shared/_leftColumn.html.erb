<div class='wrapper'>
	<h3 class='column-heading'>Your Companies</h3>
	
	<nav class='nav'>
		<ul>
			<% current_user.companies.each do |c| %>
				<li><%= link_to c.name, admin_company_url(c) %></li>
				<% if (@company == c) %>
					<ul class='sub'>
						<li><%= link_to "Employees", admin_company_employees_url(c) %></li>
						<li><%= link_to "Roles", admin_company_roles_url(c) %></li>
						<li><a href='#link'>Account Settings</a></li>
					</ul>
				<% end %>
			<% end %>
			<li><%= link_to "+ add new company", new_admin_company_url, {:style => 'background:#00FF00;'} %></li>
		</ul>
	</nav>
</div>