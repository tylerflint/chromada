	</div>
</div>

<script type='text/javascript'>

	var shifted = false;

	function shiftPage()
	{
		if(shifted)
		{
			$(".shifter").animate({"left": "+=" + $(".shifter").width()/2});
			shifted = false;
		}else{
			$(".shifter").animate({"left": "-=" + $(".shifter").width()/2});
			shifted = true;
		}
	}
</script>