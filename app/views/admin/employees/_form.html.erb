
<h1>Create/Edit Employee</h1>

<%= form_for employee, :url => (employee.new_record? ? admin_company_employees_path(company) : admin_company_employee_path(company)), :html => {:id => ''} do |f| -%>
	
	<div class='button-bar'>
		<div class='controls'>
			<div class='admin-sprite button save' onclick="save()"></div>
			<div class='admin-sprite button cancel' onclick="cancel()"></div>
			<div class='admin-sprite button delete' onclick="destroy()"></div>
		</div>
	</div>

	<div class='employee-info'>
		<%= link_to image_tag('edit-employee-photo.gif', :alt => 'First Middle Last', :title => 'First Middle Last'), root_url, :id => 'edit-employee-photo-######', :class=> 'employee-photo' %>
		
		<input class='firstname' type="text" name="employee[firstname]" value='<%= employee.firstname ||= 'First Name' %>' onfocus='if(this.value=="First Name")value=""' onblur='if(this.value=="")this.value="First Name"'/>
		<input class='lastname' type="text" name="employee[lastname]" value='<%= employee.lastname ||= 'Last Name' %>' onfocus='if(this.value=="Last Name")value=""' onblur='if(this.value=="")this.value="Last Name"'/>
	</div>

	<div class='employee-password'>
		<input class='password' type="text" name="" value='Type Password' onfocus='if(this.value=="Type Password")value=""' onblur='if(this.value=="")this.value="Type Password"'/>
		<span class='uppercase'>or</span>
		<div class='checkbox-group'>
			<input type="checkbox" name="generate-employee-id" onchange="autoGenerateEmployeeId(this)"/>
			<label>Auto Generate</label>
		</div>
	</div>
	
	<div class='employee-id'>
		<input id='id' type="text" name="" value='Employee ID' onfocus='if(this.value=="Employee ID")value=""' onblur='if(this.value=="")this.value="Employee ID"'/>
		<span class='uppercase'>or</span>
		<div class='checkbox-group'>
			<input type="checkbox" name="generate-employee-id" onchange="autoGenerateEmployeeId(this)"/>
			<label>Auto Generate</label>
		</div>
	</div>
	
	<input class='email' type="text" name="employee[email]" value='<%= employee.firstname ||= 'Email' %>' onfocus='if(this.value=="Email")value=""' onblur='if(this.value=="")this.value="Email"'/>
	
	<div class='roles'>
		<h3>Assign Employee Roles</h3>
		<ul>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
			<li class='checkbox-group'><input type="checkbox"/><label>Level 1</label></li>
		</ul>
	</div>
<% end -%>

<script type="text/javascript" charset="utf-8">
	function autoGenerateEmployeeId (checkbox) {
		if (checkbox.checked) {
			$("#edit-employee-custom-id").val("").attr('disabled', true)
		} else {
			$("#edit-employee-custom-id").removeAttr('disabled')
		}
	}
</script>