<% content_for :left do %>
	<% if (@company.new_record?) %>
		<%= render :partial => 'admin/shared/menu', :locals => {:active => :companies} %>
	<% else %>
		<%= render :partial => 'admin/companies/menu', :locals => {:active => :edit} %>
	<% end %>
<% end %>

<div class='content company'>
		
	<%= form_for [:admin, @company] do |f| %>
	
		<%= render :partial => 'admin/shared/actions_bar', :locals => {:form => f, :object => @company, :back_url => url_for([:admin, :companies]), :delete_url => url_for([:admin, @company])} %>

		<ul class='company'>
			<li>
				<h3 class='heading'>company name</h3>
				<input type='text' for='' name='company[name]' class='name' value='<%= @company.name || 'Type Company Name Here' %>' onfocus='if(this.value=="Type Company Name Here")value=""' onblur='if(this.value=="")this.value="Type Company Name Here"' />
			</li>
			
			<!--
			<li>
				<p class='note'>Get started now by selecting which products you would like for this company.</p>
				<div class='quick-add-sprite quick-add ticker'></div>
			</li>
			-->
		</ul>
		
	<% end %>
</div>
