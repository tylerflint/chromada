</div>

<script type="text/javascript" charset="utf-8">
	$(document).ready(function(){
		$(".checkbox").dgStyle()
	})
	function autoGenerateEmployeeId (checkbox) {
		if (checkbox.checked) {
			$("#edit-user-custom-id").val("").attr('disabled', true)
		} else {
			$("#edit-user-custom-id").removeAttr('disabled')
		}
	}
</script>