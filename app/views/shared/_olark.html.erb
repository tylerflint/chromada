<script type='text/javascript'>
	//<![CDATA[
		var $box = null;
	
		olark.extend(function(api)
		{
			$box = api.box;
			
			var conversation = api.data.getConversationObject({key: 'status', initialValue: false});
			
			api.chat.onReady(function()
			{
				var olark = $('.habla_window_div_base');
				
				// Link-back custom 'Powered by Olark'
				olark.append("<a href='#link' title='visit www.olark.com' class='powered-by-olark'></a>");
				$(".powered-by-olark").attr("onclick", "window.open('http://www.olark.com')");
				
				// Create custom open/close functionallity
				function openChat(){olark.animate({"right": "15px"}, {duration:350, easing:'easeOutExpo'}); conversation.set(true)};
				function closeChat(){olark.animate({"right": "-158px"}, {duration:350, easing:'easeOutExpo'}); conversation.set(false)};
				
				// Create custom open/close links, and assign thier functionallity
				$('#habla_both_div').html("<span class='olark-open'></span><span class='olark-close'></span>");
				$('.olark-open').click(openChat);
				$('.olark-close').click(closeChat);
				
				// Initiate Olark (set position)
				if(conversation.get())
				{
					olark.css({"right": "15px"});
				}else{
					olark.css({"right": "-185px"});
					olark.animate({"right": "-158px"}, {duration:350, easing:'easeOutExpo'});
				}
				
				// If an operator initiates chat first, open the chat window
				api.chat.onMessageToVisitor(function(event){
					openChat();
				});
		    });
		});
	//]]>
</script>
	