<script type="text/javascript">
	//<![CDATA[
		//***** MAIN NAV SCROLL *****//
		var section_gutter_nav = $(".section.gutter.nav")
				,section_gutter_nav_link = $(".section.gutter.nav li a")
				,padding = 25
				,anchor = ''
				
		section_gutter_nav_link.click(function(){
			scrollWindowToSection($(this))
			return false
		})
		
		$(".section .section.column a").click(function(){
			scrollWindowToSection($(this))
			return false
		})
		
		$(window).scroll(function (){
			setWindowSection("#home", 0)
			if((Math.abs($("html, body").offset().top) + $(window).height()) >= $("#products").offset().top){
				setWindowSection("#products", 1)
				if((Math.abs($("html, body").offset().top) + $(window).height()) >= $("#how-it-works").offset().top){
					setWindowSection("#how-it-works", 2)
					if((Math.abs($("html, body").offset().top) + $(window).height()) >= $("#contact-us").offset().top){
						setWindowSection("#contact-us", 3)
					}
				}
			}
		})
		
		function setWindowSection(anchor, link_index){
			section_gutter_nav.css("top", ($(anchor).offset().top + padding))
			setActiveSectionLink($(".section.gutter.nav li a").eq(link_index))
		}
		
		function scrollWindowToSection(_anchor){
			anchor = _anchor.attr("href")
			section_gutter_nav.fadeOut()
			$("html, body").delay(250).animate(
				{scrollTop: $(anchor).offset().top}
				,1000
				,'easeInOutExpo'
				,function(){
					section_gutter_nav.css("top", ($(anchor).offset().top + padding))
					setActiveSectionLink(_anchor)
					section_gutter_nav.fadeIn()
				}
			)
		}
		
		function setActiveSectionLink(link){
			section_gutter_nav_link.each(function(){
				$(this).removeClass("active")
			})
			$(link).addClass("active")
		}
		//***** END MAIN NAV SCROLL *****//
		
		//***** PRODUCT BANNER *****//
		var banners = $('.section.wrapper.products .banner')
				,cur_banner = 0

		banners.each(function(){
			$(this).hide()
		})

		banners.eq(0).fadeIn()
		$('#count').html((cur_banner + 1) + '/' + banners.length)

		rotate = setInterval(function() {
			loadNextBanner('next')
		}, 5000)

		$('.previous').click(function(){
			clearInterval(rotate)
			loadNextBanner('previous')
		})

		$('.next').click(function(){
			clearInterval(rotate)
			loadNextBanner('next')
		})

		function loadNextBanner(direction){
			banners.eq(cur_banner).fadeOut(0250)
			switch(direction){
				case 'previous':
					if(cur_banner <= 0){
						cur_banner = (banners.length - 1)
					}else{
						cur_banner -= 1
					}
					break
				case 'next':
					if(cur_banner >= (banners.length - 1)){
						cur_banner = 0
					}else{
						cur_banner += 1
					}
					break
				default:
					alert('Oops! Make sure you provide the direction of rotation (previous/next)')
			}
			updateCount()
		}

		function updateCount(){
			$('#count').html((cur_banner + 1) + '/' + banners.length)
			banners.eq(cur_banner).fadeIn(250)
		}
		//***** END PRODUCT BANNER *****//
		
		$('form#contact-us-form').validate({
			rules: {
			'contact[message]': {
					required: true
				}
			}
			,messages: {
				'contact[message]': {
					required: ''
				}
			}
			,invalidHandler: function(element, errorClass, validClass){
				$(element).addClass('error')
			}
			,unhighlight: function(element, errorClass, validClass){
				$(element).removeClass('error');
			}
		})
		
		$('form#registration-form').validate({
			rules: {
			'user[name]': {
					required: true
				}
			}
			,'user[password]': {
					required: true
				}
			}
			,messages: {
				'user[name]': {
					required: ''
				}
				,'user[password]': {
					required: ''
				}
			}
			,invalidHandler: function(element, errorClass, validClass){
				$(element).addClass('error')
			}
			,unhighlight: function(element, errorClass, validClass){
				$(element).removeClass('error');
			}
		})
	
	//]]>
</script>