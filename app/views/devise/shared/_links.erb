<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	<span class='additional-link'>New? <%= link_to "Register Here", new_registration_path(resource_name), :class => 'site-link' %></span>
<% end -%>

<%- if controller_name != 'sessions' %>
	<span class='additional-link'>Already Registered? <%= link_to "Login Here", new_session_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	<span class='additional-link'><%= link_to "Forgot Your Password?", new_password_path(resource_name), :class => 'site-link' %></span>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<span class='additional-link'><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	<span class='additional-link'><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></span>
<% end -%>