<div id='account-register-wrapper'>
	
	<div id='chromada-icon' class='site-image'><span class='hide'>chromada</span></div>
	
	<div id='account-register-body'>
		<div id='account-register-header'>
			<h1 id='account-register-title' class='site-image'><span class='hide'>Welcome To Chromada</span></h1>
		</div>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
			<%= devise_error_messages! %>

			<div class='account-modal-content-form'>
				<div class='form-group'>
				    <span class='form-field'><%= form.text_field :email, :class => 'required', :value => 'email address (used for login)', :onFocus => 'this.value = ""', :onBlur => 'if(this.value == "") this.value = this.defaultValue;' %></span>
				</div>

				<div class='form-group'>
				    <span class='form-field'><%= form.text_field :password, :class => 'required', :value => 'password', :onFocus => 'this.value = ""', :onBlur => 'if(this.value == "") this.value = this.defaultValue;' %></span>
				</div>
		
				<div class='form-group'>
				    <span class='form-field'><%= form.text_field :password_confirmation, :class => 'required', :value => 'confirm password', :onFocus => 'this.value = ""', :onBlur => 'if(this.value == "") this.value = this.defaultValue;' %></span>
				</div>
			</div>
		
			<span class='form-field'><%= form.submit :html => {:id => 'btn-register', :class => 'site-btn'} %></span>
		<% end %>

		<%= render :partial => "devise/shared/links" %>
	</div>
</div>