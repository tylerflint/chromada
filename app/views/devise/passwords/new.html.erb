
<div class='divise forgot-password'>
	
	<div class='header'>
		<h2 class="title">Forgot Password</h2>
		<p>Thanks for registering. We promise you won't be disappointed. Just fill out the form below to get started!</p>
	</div>
	
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |form| %>		
		
		<div class='form-group'>
			<label>Email Address</label>
			<%= form.text_field :email, :class => 'first required email defaultInvalid' %>
		</div>
		
		<div class='alert'>
			<%= flash[:alert] %>
		</div>
		
		<div class="action-bar">
			<span class="submit"><%= form.submit 'login', :class => '', :value => "Submit" %></span>
			<div class='additional-links'>
				<span class='additional-link'>New? <%= link_to "Register Here", new_user_registration_url, :class => 'site-link' %></span>
				<span class='additional-link'>Already Registered? <%= link_to "Login Here", new_session_path(resource_name) %></span>
			</div>
		</div>
	<% end %>
</div>

<script type="text/javascript">
	//<![CDATA[
		
		// Autofocus on the first input field
		$("input.first").focus();
	
		jQuery.validator.addMethod("defaultInvalid", function(value, element)
		{
		   return value != element.defaultValue;
		}, "");
		
		$("#user_new").validate();
		$('#user_new').submit(function(form)
		{
			if($("#user_new").valid())
			{
				form.submit();
			}
		});
	//]]>
</script>